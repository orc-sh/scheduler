{
  "name": "orc",
  "version": "1.0.0",
  "description": "Lightweight webhook scheduling service",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"pnpm dev:web\" \"pnpm dev:scheduler\" \"pnpm dev:auth\" \"pnpm dev:celery\" --names \"WEB,SCHEDULER-API,AUTH,CELERY\" --prefix-colors \"cyan,yellow,green,blue\"",
    "dev:web": "cd apps/web && pnpm dev",
    "dev:auth": "cd services/auth && python -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8001",
    "dev:scheduler": "cd services/scheduler && python -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "dev:celery": "cd services/scheduler && celery -A app.main.scheduler worker -E --loglevel=info",
    "build": "pnpm build:web",
    "build:web": "cd apps/web && pnpm build",
    "test": "pnpm test:web && pnpm test:scheduler",
    "test:web": "cd apps/web && pnpm test",
    "test:scheduler": "cd services/scheduler && python -m pytest",
    "lint": "pnpm lint:web && pnpm lint:scheduler",
    "lint:web": "cd apps/web && pnpm lint",
    "lint:scheduler": "cd services/scheduler && python -m black . && python -m isort . && python -m flake8",
    "format": "pnpm format:web",
    "format:web": "cd apps/web && pnpm format",
    "format:check": "pnpm format:check:web",
    "format:check:web": "cd apps/web && pnpm format:check",
    "clean": "pnpm clean:web && pnpm clean:scheduler",
    "clean:web": "cd apps/web && rm -rf node_modules dist",
    "clean:scheduler": "cd services/scheduler && find . -type d -name __pycache__ -delete",
    "setup": "pnpm install && cd services/scheduler && python -m pip install -e .[dev]",
    "prepare": "husky install"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.0",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "apps/web/**/*.{ts,tsx}": [
      "prettier --write"
    ],
    "services/scheduler/**/*.py": [
      "./venv/bin/python -m black --quiet",
      "./venv/bin/python -m isort --quiet",
      "./venv/bin/python -m flake8 --max-line-length=120 --extend-ignore=E203,W503"
    ]
  },
  "keywords": [
    "fullstack",
    "typescript",
    "react",
    "fastapi",
    "python",
    "vite",
    "pnpm",
    "monorepo"
  ],
  "author": "Ruban Thilak",
  "license": "ISC",
  "packageManager": "pnpm@9.12.3+sha256.24235772cc4ac82a62627cd47f834c72667a2ce87799a846ec4e8e555e2d4b8b"
}
