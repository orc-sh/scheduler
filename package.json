{
  "name": "orc",
  "version": "1.0.0",
  "description": "Lightweight webhook scheduling service",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"pnpm dev:web\" \"pnpm dev:api\" --names \"WEB,API\" --prefix-colors \"cyan,yellow\"",
    "dev:web": "cd apps/web && pnpm dev",
    "dev:api": "cd services/scheduler && python -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "build": "pnpm build:web",
    "build:web": "cd apps/web && pnpm build",
    "test": "pnpm test:web && pnpm test:api",
    "test:web": "cd apps/web && pnpm test",
    "test:api": "cd services/scheduler && python -m pytest",
    "lint": "pnpm lint:web && pnpm lint:api",
    "lint:web": "cd apps/web && pnpm lint",
    "lint:api": "cd services/scheduler && black . && isort . && flake8",
    "format": "pnpm format:web",
    "format:web": "cd apps/web && pnpm format",
    "format:check": "pnpm format:check:web",
    "format:check:web": "cd apps/web && pnpm format:check",
    "clean": "pnpm clean:web && pnpm clean:api",
    "clean:web": "cd apps/web && rm -rf node_modules dist",
    "clean:api": "cd services/scheduler && find . -type d -name __pycache__ -delete",
    "setup": "pnpm install && cd services/scheduler && python -m pip install -e .[dev]",
    "prepare": "husky install"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.0",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "apps/web/**/*.{ts,tsx}": [
      "prettier --write"
    ],
    "services/scheduler/**/*.py": [
      "python -m black --quiet",
      "python -m isort --quiet",
      "python -m flake8 --max-line-length=120 --extend-ignore=E203,W503"
    ]
  },
  "keywords": [
    "fullstack",
    "typescript",
    "react",
    "fastapi",
    "python",
    "vite",
    "pnpm",
    "monorepo"
  ],
  "author": "Ruban Thilak",
  "license": "ISC"
}
